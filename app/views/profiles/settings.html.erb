<% provide :title, 'Settings' %>


<div id="settings">
	<div id="free_trial_warning">
		<div class="w940px">
			<i class="fa fa-exclamation-triangle"></i>
			During your free trial, your profile is not visible to the public. To share with the rest of the world, <span class="uppercase blue">upgrade your account</span>
			<div class="right close animation">
				<img src="/assets/common/grey_close.png">
			</div>
		</div>
	</div>

	<!-- structure class lets you structure page with aside and #main_container -->
	<div class="w940px structure">	

		<div id="main_container">
			<div class="tabs">
				<ul class="nav">
					<li><a href="#profile_tab">Profile</a></li>
					<li><a href="#technical">Media</a></li>
					<li><a href="#prices">Account</a></li>
					<li><a href="#contact">Billing</a></li>
				</ul>

				<div id="profile_tab">
					<form class="form">

						<div class="line">
							<label for="act_name">Act name<i class="fa fa-asterisk"></i></label>
							<div class="right">
								<input class="input" name="act_name">
								<div class="comment">Your full name, alias or name of squad which will dispayed in profile</div>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="username">Username<i class="fa fa-asterisk"></i></label>
							<div class="right">
								<input class="input" name="username">
								<div class="comment">Your Entertaina URL: https://entertaina.com/<b id='username_future'></b></div>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="category">Category<i class="fa fa-asterisk"></i></label>
							<div class="right">
								<select name="category">
									<option value="">Wow</option>
									<option value="">Variant 1</option>
									<option value="">Variant 2</option>
									<option value="">Variant 3</option>
								</select>
							</div>
							<div class="clear"></div>

							<label for="type">Type<i class="fa fa-asterisk"></i></label>
							<div class="right" style="line-height: 19px;"> <!-- inline style is for comment adjastment -->
								<select name="type">
									<option value="">Rock Bands</option>
									<option value="">Variant 1</option>
									<option value="">Variant 2</option>
									<option value="">Variant 3</option>
								</select>
								<div class="comment">Your occupation category and type that will affect on the search result</div>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="location">Location<i class="fa fa-asterisk"></i></label>
							<div class="right">
								<input class="input" name="location">
								<div class="comment">The area in which you provide services</div>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="phone">Phone</label>
							<div class="right">
								<input class="input" name="phone">
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="email">Email</label>
							<div class="right">
								<input class="input" name="email">
							</div>
							<div class="clear"></div>
						</div>

						<div class="line website">
							<label for="website">Website</label>
							<div class="right">
								<div id="http">http:/<span style="margin-left: -3px;">/</span></div>
								<input class="input" name="website">
								<div class="comment">Public contact details to communicate with you</div>
							</div>
							<div class="clear"></div>
						</div>


						<div class="line">
							<label for="twitter">Twitter</label>
							<div class="right">
								<input class="input" name="twitter">
							</div>
							<div class="clear"></div>
						</div>




						<section id="network">
							<div class="line">
								<label>Add another one</label>
								<div class="right"
									<% (1..13).each do |i| %>
									<a href=""><img src="/assets/common/social_icons/<%= i %>.png"></a>
									<% end %>
								</div>
								<div class="clear"></div>
							</div>
						</section>

						<div class="line">
							<label for="">Biography<i class="fa fa-asterisk"></i></label>
							<%= render 'layouts/text_editor', comment: 'The area in which you provide services' %>

							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="example_repertoire">Example reportoire</label>
							<div class="right">
								<textarea name="example_repertoire"></textarea>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="example_repertoire">Recent clients</label>
							<div class="right">
								<textarea name="example_repertoire"></textarea>
								<div class="comment">Lists of 5-10 names. Separate names using ; semicolons</div>
							</div>
							<div class="clear"></div>
						</div>

						<div class="line price">
							<label for="price">Price from</label>
							<div class="right">

								<div id="currency">
									<select name="">
										<option value="">£</option>
										<option value="">€</option>
										<option value="">$</option>
									</select>
								</div>

								<input class="input" name="price">
							</div>
							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="">Pricing options<i class="fa fa-asterisk"></i></label>
							<%= render 'layouts/text_editor', comment: 'Detailed description of your price options. Take this section carefully.' %>

							<div class="clear"></div>
						</div>

						<div class="line">
							<label for="">Technical specs<i class="fa fa-asterisk"></i></label>
							<%= render 'layouts/text_editor', comment: 'Detailed description of your technical specifications. Take this section carefully.' %>

							<div class="clear"></div>
						</div>

						<div class="right">
							<a class="flat_button uppercase">Update</a>
						</div>





					</form>
				</div>

				<div id="technical">
				</div>

				<div id="prices">
				</div>

				<div id="contact">
				</div>
			</div>
		</div>


